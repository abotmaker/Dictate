<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light Theme -->
    <style name="Theme.Dictate.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/dictate_primary_background_light</item>
        <item name="colorPrimary">@color/dictate_primary_accent_light</item>
        <item name="colorOnPrimary">@color/dictate_white</item>
        <item name="colorSecondary">@color/dictate_primary_accent_light</item>
        <item name="colorOnSecondary">@color/dictate_white</item>
        <item name="android:textColor">@color/dictate_primary_text_light</item>
        <item name="android:statusBarColor">@color/dictate_primary_background_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.Dictate.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/dictate_primary_background_dark</item>
        <item name="colorPrimary">@color/dictate_primary_accent_dark</item>
        <item name="colorOnPrimary">@color/dictate_black</item>
        <item name="colorSecondary">@color/dictate_primary_accent_dark</item>
        <item name="colorOnSecondary">@color/dictate_black</item>
        <item name="android:textColor">@color/dictate_primary_text_dark</item>
        <item name="android:statusBarColor">@color/dictate_primary_background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Dictate" parent="Theme.Dictate.Light" />

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

</resources>